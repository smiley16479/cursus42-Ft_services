CREATE DATABASE IF NOT EXISTS wordpress CHARACTER SET utf8 COLLATE utf8_general_ci;
SET PASSWORD FOR 'mysql'@'localhost'=PASSWORD('pass') ;
GRANT ALL ON *.* TO 'mysql'@'127.0.0.1' IDENTIFIED BY 'pass' WITH GRANT OPTION;
GRANT ALL ON *.* TO 'mysql'@'localhost' IDENTIFIED BY 'pass' WITH GRANT OPTION;
GRANT ALL ON *.* TO 'mysql'@'%' IDENTIFIED BY 'pass' WITH GRANT OPTION;
FLUSH PRIVILEGES;
